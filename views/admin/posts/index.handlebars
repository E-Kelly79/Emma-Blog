<h1>All Posts</h1>
<table class="table table-bordered">
    <caption>List of Blog Posts</caption>
    <thead>
        <tr class="table-warning">
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Edit Post</th>
            <th>Delete Post</th>
            <!--<th>Body</th>-->
        </tr>
    </thead>
    <tbody>
    {{#each posts}}
        <tr class="table-success">
            <td>{{id}}</td>
            <td><img src="/uploads/{{file}}" height="100px" class="media img-responsive" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td><form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        </tr>
    {{/each}}
    </tbody>
</table>

