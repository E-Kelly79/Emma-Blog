<h1>Create Posts</h1>

<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Eneter Title">
    </div>

    <div class="form-group">
        <label for="title">Title</label>
        <select  class="form-control" id="status" name="status">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            <option value="default" selected>Please select an option</option>
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments">
        <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Description</label>
        <textarea cols="30" rows="10" class="form-control" id="body" name="body" placeholder="Eneter Description"></textarea>
    </div>






    <button type="submit">Submit</button>

</form>